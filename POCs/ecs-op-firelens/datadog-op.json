{
    "compatibilities": [
        "FARGATE",
        "EC2"
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "containerDefinitions": [
        {
            "essential": true,
            "image": "amazon/aws-for-fluent-bit:stable",
            "name": "log_router",
            "firelensConfiguration":{
                "type":"fluentbit",
                "options":{
                    "enable-ecs-log-metadata":"true"
                }
            },
            "memoryReservation": 50
        },
        {
            "cpu": 500,
            "environment": [
                {
                    "name": "ECS_FARGATE",
                    "value": "true"
                },
                {
                    "name": "DD_APM_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_APM_NON_LOCAL_TRAFFIC",
                    "value": "true"
                },
                {
                    "name": "DD_OBSERVABILITY_PIPELINES_WORKER_LOGS_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_SITE",
                    "value": "datadoghq.com"
                },
                {
                    "name": "DD_OBSERVABILITY_PIPELINES_WORKER_LOGS_URL",
                    "value": "http://localhost:8282"
                },
                {
                    "name": "DD_LOGS_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL",
                    "value": "true"
                }
            ],
            "secrets": [
                {
                    "name": "DD_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:439537465448:secret:kelnerDogfoodAccount-EioKim:DD_API_KEY::"
                }
            ],
            "essential": true,
            "image": "public.ecr.aws/datadog/agent:latest",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/datadog-test",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "ddagent"
                }
            },
            "memory": 512,
            "mountPoints": [],
            "name": "datadog-agent",
            "portMappings": [
                {
                    "containerPort": 8126,
                    "hostPort": 8126,
                    "protocol": "tcp"
                }
            ],
            "systemControls": [],
            "volumesFrom": []
        },
        {
            "command": [
                "run"
            ],
            "cpu": 500,
            "environment": [
                {
                    "name": "DD_OP_API_ENABLED",
                    "value": "true"
                },
                {
                    "name": "DD_OP_SOURCE_HTTP_SERVER_ADDRESS",
                    "value": "0.0.0.0:8282"
                },
                {
                    "name": "DD_SITE",
                    "value": "datadoghq.com"
                },
                {
                    "name": "DD_OP_API_ADDRESS",
                    "value": "0.0.0.0:8181"
                },
                {
                    "name": "DD_OP_PIPELINE_ID",
                    "value": "c051b524-8358-11f0-89af-da7ad0900002"
                }
            ],
            "secrets": [
                {
                    "name": "DD_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:439537465448:secret:kelnerDogfoodAccount-EioKim:DD_API_KEY::"
                }
            ],
            "essential": true,
            "image": "public.ecr.aws/datadog/observability-pipelines-worker:latest",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/datadog-test",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "opworker"
                }
            },
            "memory": 512,
            "mountPoints": [],
            "name": "dd-observability-pipelines-worker",
            "portMappings": [
                {
                    "containerPort": 8282,
                    "hostPort": 8282,
                    "protocol": "tcp"
                }
            ],
            "systemControls": [],
            "volumesFrom": []
        },
        {
            "cpu": 500,
            "environment": [
                {
                    "name": "RATE",
                    "value": "10"
                }
            ],
            "essential": true,
            "image": "docker.io/kscarlett/nginx-log-generator:latest",
            "logConfiguration": {
                "logDriver":"awsfirelens",
                "options": {
                    "Name": "datadog",
                    "Host": "localhost:8282",
                    "TLS": "off",
                    "dd_service": "nginx-log-generator",
                    "dd_source": "nginx",
                    "dd_tags": "kelner:hax",
                    "provider": "ecs",
                    "retry_limit": "2"
                },
                "secretOptions": [{
                    "name": "apikey",
                    "valueFrom": "arn:aws:secretsmanager:us-west-2:439537465448:secret:kelnerDogfoodAccount-EioKim:DD_API_KEY::"
                }]
            },
            "mountPoints": [],
            "name": "nginx-log-generator",
            "systemControls": [],
            "volumesFrom": []
        }
    ],
    "family": "datadog-op",
    "volumes": [],
    "networkMode": "awsvpc",
    "memory": "4 GB",
    "cpu": "2 vCPU",
    "executionRoleArn": "arn:aws:iam::439537465448:role/ecsTaskExecutionRole"
}
